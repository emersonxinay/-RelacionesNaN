<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @person.name %>
</p>

<hr/>

<h2>Agregar Proyecto</h2>
<%= form_tag(add_project_person_path(@person)) do %>
  <select name="project_id">
    <% @nonSelectedProjects.each do |p| %>
      <option value="<%= p.id %>"><%= p.name %></option>
    <% end %>
  </select>
  <%= submit_tag "Guardar" %>
<% end %>

<h2>Proyecto de <b><%= @person.name %></b></h2>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
    </tr>
  </thead>
  <tbody>
    <% @person.projects.each do |pro| %>
      <tr>
        <td>
          <%= pro.name %> 
          <a href="<%= remove_project_person_path(@person, pro )%>" data-method="delete" >[ eliminar ]</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
